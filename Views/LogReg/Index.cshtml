@using LogReg.Models
@model User

<h1>Register to this Cool Site!</h1>
<p><a style="float:right" href="/login">Login</a></p>

<form asp-action="RegistrationProcess" asp-controller="LogReg" method="post">

    <span style="color:red"  asp-validation-for="FirstName"></span><br>
    <p>First Name: <input type="text" asp-for="FirstName"></p>

    <span style="color:red"  asp-validation-for="LastName"></span><br>
    <p>Last Name Name: <input type="text" asp-for="LastName"></p>
    
    <span style="color:red"  asp-validation-for="Email"></span><br>
    <p>Email: <input type="text" asp-for="Email"></p>
    
    <span style="color:red"  asp-validation-for="Password"></span><br>
    <p>Password: <input type="password" asp-for="Password"></p>
    
    <span style="color:red"  asp-validation-for="ConfirmPassword"></span><br>
    <p>confirm Password: <input type="password" asp-for="ConfirmPassword"></p>
    
    <button type="submit">Sign Up Now</button>
</form>

<hr>
